<div class="create-book-container">


<h2 class="create-book-heading">Share a book</h2>

<form action="/books/create" method="POST" enctype="multipart/form-data" class="create-book-form">


  <label for="image-cover" class="image-upload-label">Click to upload image 
    <i class="fa-solid fa-camera"></i>
 <input type="file" id="image-cover" name="image-cover" />

  </label>
 
   
   <label for="title">Title</label>
   <input type="text" id="title" name="title" />
   
   <label for="author">Author</label>
   <input type="text" id="author" name="author"/>

   <label for="description">Description</label>
   <textarea id="description" name="description" cols="30" rows="4"></textarea>

   <label for="rate">Rate</label>
   <input type="number" id="rate" name="rating" min="1" max="10"/>
   <button type="submit" class="create-btn">Share</button>
   {{#if errorMessage}}
    <p class="error-message">{{errorMessage}}</p>
   {{/if }}

</form>


</div>